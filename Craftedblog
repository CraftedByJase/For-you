        <div class="search-filter">
            <div class="filter-row">
                <div class="search-box">
                    <input type="text" id="searchInput" placeholder="Search articles...">
                </div>
                <div class="filter-group">
                    <label for="categoryFilter">Category:</label>
                    <select id="categoryFilter">
                        <option value="all">All Categories</option>
                        <option value="fitness">Fitness</option>
                        <option value="nutrition">Nutrition</option>
                        <option value="rehab">Rehab & Prehab</option>
                        <option value="mental">Mental Health</option>
                        <option value="lifestyle">Lifestyle</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="sortFilter">Sort by:</label>
                    <select id="sortFilter">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="title">Title (A-Z)</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="articles-grid" id="articlesGrid"></div>
        <div class="no-results" id="noResults" style="display: none;">
            No articles found matching your criteria.
        </div>
    </main>

    <script>
        const articles = [
            {
                id: 1,
                title: "Building Resilient Movement Patterns",
                excerpt: "Discover how proper movement patterns can prevent injury and enhance performance across all aspects of life.",
                category: "rehab",
                author: "Jase Porter",
                date: "2025-10-20",
                url: "#"
            },
            {
                id: 2,
                title: "Nutrition for Tactical Athletes",
                excerpt: "Fuel your body for peak performance with strategic nutrition tailored for military and first responders.",
                category: "nutrition",
                author: "Jase Porter",
                date: "2025-10-18",
                url: "#"
            },
            {
                id: 3,
                title: "The Science of Recovery",
                excerpt: "Understanding the physiological and psychological aspects of effective recovery strategies.",
                category: "fitness",
                author: "Jase Porter",
                date: "2025-10-15",
                url: "#"
            },
            {
                id: 4,
                title: "Mental Resilience in High-Stress Environments",
                excerpt: "Practical techniques for maintaining mental clarity and emotional balance under pressure.",
                category: "mental",
                author: "Jase Porter",
                date: "2025-10-12",
                url: "#"
            },
            {
                id: 5,
                title: "Functional Fitness for Everyday Life",
                excerpt: "Training principles that translate directly to real-world movement and daily activities.",
                category: "fitness",
                author: "Jase Porter",
                date: "2025-10-10",
                url: "#"
            },
            {
                id: 6,
                title: "Injury Prevention Through Mobility Work",
                excerpt: "How strategic mobility training can reduce injury risk and improve overall movement quality.",
                category: "rehab",
                author: "Jase Porter",
                date: "2025-10-08",
                url: "#"
            },
            {
                id: 7,
                title: "Sustainable Lifestyle Habits",
                excerpt: "Creating lasting change through small, consistent actions aligned with your values.",
                category: "lifestyle",
                author: "Jase Porter",
                date: "2025-10-05",
                url: "#"
            },
            {
                id: 8,
                title: "Strength Training for Longevity",
                excerpt: "Evidence-based approaches to building and maintaining strength throughout the lifespan.",
                category: "fitness",
                author: "Jase Porter",
                date: "2025-10-01",
                url: "#"
            }
        ];

        let filteredArticles = [...articles];

        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        function renderArticles(articlesToRender) {
            const grid = document.getElementById('articlesGrid');
            const noResults = document.getElementById('noResults');

            if (articlesToRender.length === 0) {
                grid.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }

            grid.style.display = 'grid';
            noResults.style.display = 'none';

            grid.innerHTML = articlesToRender.map(article => `
                <article class="article-card" onclick="window.location.href='${article.url}'">
                    <div class="article-header">
                        <span class="article-category">${article.category}</span>
                        <span class="article-date">${formatDate(article.date)}</span>
                    </div>
                    <h2 class="article-title">${article.title}</h2>
                    <p class="article-excerpt">${article.excerpt}</p>
                    <div class="article-footer">
                        <span class="article-author">By ${article.author}</span>
                        <a href="${article.url}" class="read-more">Read More â†’</a>
                    </div>
                </article>
            `).join('');
        }

        function filterAndSortArticles() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const categoryFilter = document.getElementById('categoryFilter').value;
            const sortFilter = document.getElementById('sortFilter').value;

            filteredArticles = articles.filter(article => {
                const matchesSearch = article.title.toLowerCase().includes(searchTerm) ||
                                    article.excerpt.toLowerCase().includes(searchTerm);
                const matchesCategory = categoryFilter === 'all' || article.category === categoryFilter;
                return matchesSearch && matchesCategory;
            });

            if (sortFilter === 'newest') {
                filteredArticles.sort((a, b) => new Date(b.date) - new Date(a.date));
            } else if (sortFilter === 'oldest') {
                filteredArticles.sort((a, b) => new Date(a.date) - new Date(b.date));
            } else if (sortFilter === 'title') {
                filteredArticles.sort((a, b) => a.title.localeCompare(b.title));
            }

            renderArticles(filteredArticles);
        }

        document.getElementById('searchInput').addEventListener('input', filterAndSortArticles);
        document.getElementById('categoryFilter').addEventListener('change', filterAndSortArticles);
        document.getElementById('sortFilter').addEventListener('change', filterAndSortArticles);

        renderArticles(articles);
    </script>
</body>
